<article class="firstScreen">
	<%= form_for(resource, :as => resource_name, :class =>"form-signin clearfix", :url => registration_path(resource_name)) do |f| %>
  	<%= devise_error_messages! %>

        <h2 class="form-signin-heading">Are you ready to get medal mad?</h2>
        
        <section class="formActions" id="signupForm">
            <div class="input-group first_name">
              <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
              <%= f.text_field :first_name, :class => "form-control", :placeholder => "First Name"%>
            </div>
            <div class="input-group last_name">
              <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
               <%= f.text_field :last_name, :class => "form-control", :placeholder => "Last Name"%>
            </div>
            <div class="upload">
              <button class="form-control">Profile Image</button>
              <input type="file" name="image" />
            </div>
              <div class="clearfix"></div>
            <div class="input-group email">
			  <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
			  <%= f.email_field :email, :class => "form-control", :placeholder => "Email Address" %></div>
			</div>
	        <div class="input-group password">
			  <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
			  <%= f.password_field :password, :class => "form-control", :placeholder => "Password" %></div>
			</div>
			<div class="input-group password_confirmation">
			  <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
			  <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Password Confirmation" %></div>
			</div>
	        <%= f.submit "Log In", :class => "form-control submitLogin" %></div>
            <div class="clearfix"></div>
            <section class="signUp">
                <%= render "users/shared/links" %>
            </section>
            
        </section>
   <% end %>
    
</article>